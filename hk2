count = 0
answer_one = input("Tell me my pet: ")
if answer_one.lower() == "lizard":
    print("Correct!")
    count = count + 1
print("Next question")


# Question 2
answer_two = input("Tell me the tallest building in the world: ")
if answer_two.lower() == "burj khalifa":
    print("Correct!")
    count = count + 1
print("Next question")


# Question 3
answer_three = input("Tell me the president of America: ")
if answer_three.lower() == "trump":
    print("Correct!")
    count = count + 1
print("Next question")

